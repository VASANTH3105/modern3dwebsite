    <script>
        const input = document.querySelector("#value");
        const btbtn = document.querySelector("#btbtn");
        const answer = document.querySelector("#answer");

        btbtn.addEventListener("click", () => {
            myFunc();
        });

        function myFunc() {
            const inputValue = parseInt(input.value);

            if (isNaN(inputValue)) {
                answer.innerHTML = "<h1>Please enter a valid number</h1>";
            } else {
                if (inputValue % 2 == 0) {
                    answer.innerHTML = "<h1>Even number</h1>";
                } else {
                    answer.innerHTML = "<h1>Odd number</h1>";
                }
            }
        }
    </script>
